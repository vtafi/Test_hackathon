}

.flood-bubble-title {
  margin: 0;
  color: white;
  font-size: 16px;
  font-weight: 600;
  line-height: 1.3;
  flex: 1;
}

.flood-bubble-body {
  padding: 15px;
  background: white;
}

.flood-bubble-status {
  text-align: center;
  margin-bottom: 15px;
}

.status-badge {
  color: white;
  padding: 6px 16px;
  border-radius: 20px;
  font-size: 13px;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
