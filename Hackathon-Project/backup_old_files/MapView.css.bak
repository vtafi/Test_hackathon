  padding: 10px;
  background: #f8f9fa;
  border-radius: 6px;
  border-left: 3px solid #2196f3;
}

.bubble-threshold p {
  margin: 0 0 8px 0;
  font-size: 13px;
  font-weight: 600;
  color: #333;
}

.bubble-threshold ul {
  margin: 5px 0;
  padding-left: 20px;
  font-size: 13px;
  list-style: none;
}

.bubble-threshold li {
  margin: 4px 0;
  color: #555;
}

/* ========================================
   üöó ROUTING CONTROLS STYLES
   ======================================== */

.routing-controls {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: 15px;
  max-width: 350px;
  max-height: calc(100vh - 40px); /* Chi·ªÅu cao t·ªëi ƒëa = chi·ªÅu cao m√†n h√¨nh - margin */
  overflow-y: auto; /* Cho ph√©p scroll d·ªçc */
  overflow-x: hidden; /* ·∫®n scroll ngang */
  padding-right: 5px; /* Space cho scrollbar */
}

/* Custom scrollbar cho routing controls */
.routing-controls::-webkit-scrollbar {
  width: 8px;
}

.routing-controls::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10px;
  margin: 5px 0;
}

.routing-controls::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 10px;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.routing-controls::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, #764ba2 0%, #667eea 100%);
  border-color: rgba(255, 255, 255, 0.5);
}

.routing-toggle-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 25px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.routing-toggle-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
}

.routing-toggle-btn.active {
  background: linear-gradient(135deg, #F44336 0%, #E91E63 100%);
  box-shadow: 0 4px 15px rgba(244, 67, 54, 0.4);
}

.routing-instructions {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  overflow-y: auto; /* Cho ph√©p scroll n·ªôi dung b√™n trong */
  max-height: calc(100vh - 120px); /* Gi·ªõi h·∫°n chi·ªÅu cao */
  animation: slideDown 0.3s ease;
  padding-bottom: 10px; /* Padding cu·ªëi ƒë·ªÉ scroll tho·∫£i m√°i */
}

/* Custom scrollbar cho routing instructions */
.routing-instructions::-webkit-scrollbar {
  width: 8px;
}

.routing-instructions::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  margin: 5px;
}

.routing-instructions::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 10px;
  border: 2px solid white;
}

.routing-instructions::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, #764ba2 0%, #667eea 100%);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.routing-hint {
  padding: 15px 20px;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 10px;
  border-left: 4px solid #2196f3;
}

.hint-icon {
  font-size: 20px;
}

.route-info-panel {
  background: white;
  padding: 0;
}

.route-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-bottom: 2px solid rgba(255, 255, 255, 0.2);
}

.route-info-header h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 600;
}

.clear-route-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 13px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.clear-route-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.route-stats {
  padding: 15px 20px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px;
  background: #f5f5f5;
  border-radius: 8px;
  font-size: 14px;
}

.stat-icon {
  font-size: 18px;
  flex-shrink: 0;
}

.stat-label {
  color: #666;
  flex-shrink: 0;
}

.stat-value {
  margin-left: auto;
  font-weight: 600;
  color: #2196f3;
  font-size: 15px;
}

/* Location Permission States */
.routing-hint.location-prompt {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  color: #f57c00;
  border-left-color: #ff9800;
}

.routing-hint.location-denied {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #c62828;
  border-left-color: #f44336;
}

.routing-hint.location-granted {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
  border-left-color: #4caf50;
}

/* Flood Warning Panel */
.route-warning {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  padding: 15px 20px;
  border-left: 4px solid #ff9800;
  animation: warningPulse 2s ease-in-out infinite;
}

@keyframes warningPulse {
  0%, 100% {
    border-left-color: #ff9800;
  }
  50% {
    border-left-color: #f44336;
  }
}

.warning-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.warning-icon {
  font-size: 24px;
  animation: shake 0.5s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(-5deg);
  }
  50% {
    transform: rotate(5deg);
  }
}

.warning-header h4 {
  margin: 0;
  color: #e65100;
  font-size: 16px;
  font-weight: 600;
}

.warning-message {
  margin: 10px 0;
  color: #f57c00;
  font-weight: 600;
  font-size: 14px;
}

.warning-zones {
  margin: 10px 0;
  padding: 10px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 6px;
}

.warning-zones strong {
  color: #e65100;
  font-size: 13px;
  display: block;
  margin-bottom: 8px;
}

.warning-zones ul {
  margin: 5px 0 0 0;
  padding-left: 20px;
  font-size: 13px;
  color: #d84315;
}

.warning-zones li {
  margin: 4px 0;
}

.warning-note {
  margin: 10px 0 0 0;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 6px;
  font-size: 12px;
  color: #666;
  border-left: 3px solid #2196f3;
}

/* Route Info Header States */
.route-info-header.safe {
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
}

.route-info-header.warning {
  background: linear-gradient(135deg, #ff9800 0%, #ffa726 100%);
}

/* Stat Value States */
.stat-value.safe {
  color: #4caf50;
}

.stat-value.danger {
  color: #f44336;
  font-weight: 700;
}

/* üéØ Route Alternatives Selection */
.route-alternatives {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-top: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border: 2px solid #2196F3;
}

.alternatives-header {
  margin-bottom: 12px;
}

.alternatives-header h4 {
  margin: 0 0 4px 0;
  font-size: 16px;
  color: #1976D2;
}

.alternatives-hint {
  font-size: 12px;
  color: #666;
  font-style: italic;
}

.alternatives-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.alternative-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 2px solid #e0e0e0;
  background: #f9f9f9;
}

.alternative-item:hover {
  transform: translateX(4px);
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
}

.alternative-item.selected {
  border-color: #2196F3;
  background: #E3F2FD;
  box-shadow: 0 2px 8px rgba(33, 150, 243, 0.3);
}

.alternative-item.selected.has-flood {
  border-color: #FF9800;
  background: #FFF3E0;
}

.alternative-number {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: #2196F3;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 16px;
  flex-shrink: 0;
}

.alternative-item.selected .alternative-number {
  background: #1976D2;
  font-size: 18px;
}

.alternative-item.has-flood .alternative-number {
  background: #FF9800;
}

.alternative-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.alternative-main {
  display: flex;
  gap: 12px;
  align-items: baseline;
}

.alternative-distance {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.alternative-duration {
  font-size: 14px;
  color: #666;
}

.alternative-status {
  font-size: 12px;
}

.flood-badge {
  color: #E65100;
  font-weight: 600;
}

.safe-badge {
  color: #2E7D32;
  font-weight: 600;
}

.route-color-indicator {
  width: 6px;
  height: 48px;
  border-radius: 3px;
  flex-shrink: 0;
}

.route-number-badge {
  font-size: 12px;
  padding: 4px 8px;
  background: rgba(255,255,255,0.3);
  border-radius: 12px;
  margin-left: 8px;
  font-weight: normal;
}

/* Responsive */
@media (max-width: 768px) {
  .routing-controls {
    top: 10px;
    right: 10px;
    left: 10px;
    max-width: none;
  }

  .routing-toggle-btn {
    font-size: 14px;
    padding: 10px 20px;
  }

  .routing-hint {
    font-size: 13px;
    padding: 12px 15px;
  }

  .route-stats {
    padding: 12px 15px;
  }

  .route-warning {
    padding: 12px 15px;
  }

  .warning-zones ul {
    font-size: 12px;
  }
}