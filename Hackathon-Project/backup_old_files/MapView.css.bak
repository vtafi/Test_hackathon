}

.flood-bubble-safe {
  margin: 15px 0;
  padding: 12px;
  background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
  border-radius: 8px;
  border-left: 4px solid #4caf50;
  color: #2e7d32;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.flood-bubble-coords {
  color: #888;
  font-size: 12px;
  margin: 15px 0 0 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Additional styles for flood overlay bubbles */
.bubble-district,
.bubble-risk,
.bubble-description {
  margin: 0 0 12px 0;
  color: #444;
  font-size: 14px;
  line-height: 1.5;
  display: flex;
  align-items: flex-start;
  gap: 8px;
}

.bubble-risk strong {
  font-weight: 600;
}

.bubble-description {
